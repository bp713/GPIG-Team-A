<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:src="@drawable/ic_location_searching" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_margin="20dp"
        android:text="@string/check_in_location_searching" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_error_outline"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_margin="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_margin="20dp"
        android:text="@string/check_in_location_incorrect" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_wifi_off"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_margin="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_margin="20dp"
        android:text="@string/check_in_network_not_connected" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_columnSpan="2"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_margin="20dp"
        android:text="@string/check_in_button" />
</GridLayout>